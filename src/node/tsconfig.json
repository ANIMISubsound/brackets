{
  "compilerOptions": {
    "outDir": "../../dist/node",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "strictNullChecks": false
  },
  "include": [
    "./**/*"
  ]
}
